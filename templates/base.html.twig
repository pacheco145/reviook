<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="initial-scale=1">
        <title>{% block title %}Reviook{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

           <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet"/> -->
        <link href="{{ asset('styles/main.css') }}" type="text/css" rel="stylesheet"/>
        {% block stylesheets %}
        {% endblock %}

        
        {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <span class="navbar__logo">
                <a href="{{ path('home')}}" >
                    <span>Reviook</span>
                </a>
            </span>
            <span class="navbar__user-icon my-account" id="triggerToggle">
                <img src="{{ asset('images/user.svg') }}" alt="">
            </span>
            <div class="navbar__toggle" id="target" >
                <!-- <span>Log in</span> -->
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('myAccount')}}" >My account</a>
                    <hr>
                    <a href="{{ path('app_logout')}}" >Logout</a>
                {% else %}
                    <a href="{{ path('app_login')}}" >Log in</a>
                    <hr>
                    <a href="{{ path('app_register')}}" >Register</a>
                {% endif %}
            </div>
        </nav>
        <div class="nav-space"></div>
        {% block body %}{% endblock %}
        <script type="text/javascript" src="{{ asset('js/navbar.js') }}"></script>
    </body>
</html>
